{
    "name": "@btheo/dpl",
    "version": "1.0.1",
    "description": "Simple deployment tool for Docker projects",
    "main": "dist/index.js",
    "bin": {
        "dpl": "./dist/cli.js"
    },
    "scripts": {
        "build": "tsc",
        "test": "jest",
        "test:watch": "jest --watch",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "format": "prettier --write \"src/**/*.ts\"",
        "prepare": "npm run build",
        "start": "node dist/cli.js",
        "dev": "ts-node-dev --respawn --transpile-only src/cli.ts",
        "watch": "tsc -w",
        "clean": "rimraf dist",
        "prebuild": "npm run clean",
        "link-dev": "npm run build && npm link",
        "unlink-dev": "npm unlink",
        "prepublishOnly": "npm run test && npm run lint",
        "preversion": "npm run lint",
        "version": "npm run format && npm run build && git add -A dist",
        "postversion": "git push && git push --tags",
        "patch": "npm version patch && npm publish",
        "minor": "npm version minor && npm publish",
        "major": "npm version major && npm publish",
        "publish:beta": "npm publish --tag beta",
        "publish:dev": "npm publish --tag dev"
    },
    "devDependencies": {
        "@types/debug": "^4.1.8",
        "@types/inquirer": "^8.2.6",
        "@types/jest": "^29.5.5",
        "@types/node": "^20.8.0",
        "@typescript-eslint/eslint-plugin": "^6.7.3",
        "@typescript-eslint/parser": "^6.7.3",
        "eslint": "^8.50.0",
        "jest": "^29.7.0",
        "prettier": "^2.8.8",
        "rimraf": "^5.0.1",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.2.2"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/bthe0/com-deployer.git"
    },
    "bugs": {
        "url": "https://github.com/bthe0/com-deployer/issues"
    },
    "homepage": "https://github.com/bthe0/com-deployer#readme",
    "keywords": [
        "deployment",
        "docker",
        "cli",
        "ssh",
        "devops",
        "automation",
        "docker-compose"
    ],
    "author": {
        "name": "btheo",
        "url": "https://github.com/bthe0"
    },
    "license": "MIT",
    "dependencies": {
        "chalk": "^4.1.2",
        "commander": "^11.1.0",
        "conf": "^10.2.0",
        "debug": "^4.3.4",
        "inquirer": "^8.2.6",
        "node-ssh": "^13.1.0",
        "ora": "^5.4.1"
    },
    "engines": {
        "node": ">=14.0.0"
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org/"
    },
    "files": [
        "dist",
        "LICENSE",
        "README.md"
    ]
}
